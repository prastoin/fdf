NAME = fdf

SRC = main.c parser.c data.c algo.c

OBJ = $(SRC:.c=.o)

FLAG = -Wall -Wextra -Werror

LIB = libft/libft.a -L/usr/local/lib
LIB2 = -L/usr/local/lib

INC = -I./libft/ -I/usr/local/include

LIBX = -lmlx -framework OpenGL -framework AppKit

all: $(NAME)

$(NAME): $(OBJ) $(LIB)
	gcc $(FLAG) $(LIB) $(INC) $(LIB2) $(OBJ) $(LIBX) -o $(NAME)

$(LIB):
	make -C libft/ fclean
	make -C ./libft/

%.o: %.c
	gcc $(FLAG) $(INC) -o $@ -c $<

clean:
	make -C libft/ clean
	rm -rf $(OBJ)

fclean: clean
	make -C libft/ fclean
	rm -rf $(NAME)

re: fclean all

.PHONY: clean fclean re all
